{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('game') }}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('game') }}
{% endblock %}

{% block title %}Game index
{% endblock %}

{% block body %}


	<main>
		<div class="centered">
			<h1>Nos Salles</h1>
		</div>
		<div class="content">
			{% for game in games %}
				<tr>

					<p>{{ game.title }}</p>
					<p>{{ game.description }}</p>
					<p><img src="{{dossier_images ~ game.imageUrl}}" alt="{{game.title}}" class="miniature"></p>
					<p>Max players: {{ game.maxPlayers }}</p>
					<p>Min players: {{ game.minPlayers }}</p>
					<p>Game master: {{ game.gameMaster }}</p>
					<p>{{ game.gameDuration }}</p>
					<p>{{ game.pricePerPerson }}</p>
					<p>
						<a href="{{ path('game_show', {'id': game.id}) }}">show</a>
						<a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>
					</p>
				</tr>
			</td>
		</tr>
	{% else %}
		<tr>
			<td colspan="11">no records found</td>
		</tr>
	{% endfor %}

	<a href="{{ path('game_new') }}">Create new</a>
</div></main>{% endblock %}
