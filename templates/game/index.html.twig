{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Room</th>
                <th>Description</th>
                <th>ImageUrl</th>
                <th>MaxPlayers</th>
                <th>MinPlayers</th>
                <th>GameMaster</th>
                <th>GameDuration</th>
                <th>PricePerPerson</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.title }}</td>
                <td>{{ game.room }}</td>
                <td>{{ game.description }}</td>
                <td>{{ game.imageUrl }}</td>
                <td>{{ game.maxPlayers }}</td>
                <td>{{ game.minPlayers }}</td>
                <td>{{ game.gameMaster }}</td>
                <td>{{ game.gameDuration }}</td>
                <td>{{ game.pricePerPerson }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_new') }}">Create new</a>
{% endblock %}
