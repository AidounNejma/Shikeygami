{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('order') }}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('order') }}
{% endblock %}

{% block title %}Shikeygami | Détail de la commande{% endblock %}

{% block body %}
	<main>
		<div class="centered">
			<h1>réservation</h1>
		</div>
		<div class='content'>

			<table>
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ order.id }}</td>
					</tr>
					<tr>
						<th>DateOfOrder</th>
						<td>{{ order.dateOfOrder ? order.dateOfOrder|date('Y-m-d') : '' }}</td>
					</tr>
					<tr>
						<th>TotalPrice</th>
						<td>{{ order.totalPrice }}</td>
					</tr>
					<tr>
						<th>PaymentStatus</th>
						<td>{{ order.paymentStatus }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('order_index') }}">Retour à la liste</a>

			<a href="{{ path('order_edit', {'id': order.id}) }}">Modifier</a>

			{{ include('order/_delete_form.html.twig') }}
		</div>
	</main>
{% endblock %}
