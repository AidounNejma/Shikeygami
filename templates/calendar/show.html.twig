{% extends 'base.html.twig' %}

{% block title %}Shikeygami | Infos sur la partie{% endblock %}

{% block body %}
    <h1>Infos sur la partie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar.id }}</td>
            </tr>
            <tr>
                <th>Heure de début</th>
                <td>{{ calendar.startTime ? calendar.startTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de fin</th>
                <td>{{ calendar.endTime ? calendar.endTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Réservé ?</th>
                <td>{{ calendar.booked ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('calendar_index') }}">Retour à la liste</a>

    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}">Modifier</a>

    {{ include('calendar/_delete_form.html.twig') }}
{% endblock %}
