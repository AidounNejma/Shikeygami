{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('login') }}
{% endblock %}

{% block title %}Shikeygami | Connexion !{% endblock %}

{% block body %}
    <section class="content">
        <form method="post" class="formulaire">
            {% if error %}
                <div class="alert-danger">Une erreur est survenue <br>
                Veuillez vous assurer que votre adresse mail et votre mot de passe soient corrects</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="title">Connectez-vous</h1>

            <label for="inputEmail" class="label">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

            <label for="inputPassword" class="label">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <button class="formButton" type="submit">
                Se connecter
            </button>
        </form>
    </section>
{% endblock %}
